<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/back_sale"
        android:clickable="true"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:background="@drawable/arrow_left"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/saling"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出售商品"
        android:gravity="center"
        android:layout_toRightOf="@+id/back_sale"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/comit_sale"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:text="提交"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/addopt_photoright"
            android:clickable="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/swap"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="商品名称: "
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/name_sale"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/text_name"
            android:layout_toEndOf="@+id/text_name"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="出售价格: "
            android:textColor="@color/gray"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/price_sale"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/text_price"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text_differ"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="商品分类: "
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="18sp"
            />

        <Spinner
            android:id="@+id/spinner_sale"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:entries="@array/differ"
            android:spinnerMode="dropdown"
            android:layout_alignTop="@+id/text_differ"
            android:layout_toRightOf="@+id/text_differ"
            android:layout_toEndOf="@+id/text_differ">
        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/mobilephone_number"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="联系方式: "
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/number_sale"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/mobilephone_number"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="关于描述: "
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/description_sale"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/text_description"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:maxLines="3"
            />

    </RelativeLayout>

</LinearLayout>