<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/bg"
           >

    <RelativeLayout
        android:id="@+id/title_thing"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/arrow_back"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_back"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户登录"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/title_thing"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/user"/>

        <!--账号-->
        <EditText
            android:id="@+id/in_username"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/image_user"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="用户名/手机号/邮箱"
            android:inputType="textPersonName"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/image_password"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/lock"/>

        <!--密码-->
        <EditText
            android:id="@+id/in_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:password="true"
            android:textColor="@color/gray"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_password"
            android:layout_toEndOf="@+id/image_password"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_marginLeft="25dp">

        <!--记住密码-->
        <CheckBox
            android:id="@+id/cb_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorPrimary"
            android:checked="false"
            />
        <TextView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cb_mima"
            android:layout_centerVertical="true"
            android:text="记住密码"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="5dp"/>


    </RelativeLayout>


    <!--登录注册按钮-->
    <Button
        android:id="@+id/login_in"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_blue_frame"
        android:text="登录"
        android:textSize="25sp"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/check"
        android:layout_alignLeft="@+id/register_in"
        android:layout_alignStart="@+id/register_in"/>

    <Button
        android:id="@+id/register_in"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_blue_frame"
        android:text="注册"
        android:textSize="25sp"
        android:textColor="#fff"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/login_in"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/forget_to"
        android:clickable="true"
        android:layout_below="@+id/register_in"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="15dp"/>

</RelativeLayout>