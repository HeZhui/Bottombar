<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfafb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/title_Layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_me"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/title_Layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_plus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/puls"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/login_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_plus"
            android:text="用户名"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/login_ps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_plus"
            android:text="个性签名："
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/gray"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="点击登录"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="17sp"
            android:layout_marginLeft="31dp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_plus"
            android:layout_toEndOf="@+id/image_plus"
            android:layout_marginStart="31dp"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/my_shop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/login_me"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff">

        <ImageView
            android:id="@+id/image_shop"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shop"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的摊位"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/image_shop"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/image_arrow_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_request"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_marginTop="11dp"
        android:background="#fff"
        android:layout_below="@+id/my_shop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/image_flag"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/flag"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/image_arrow_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的求购"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/image_flag"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/image_arrow_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_collect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/my_request"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff">

        <ImageView
            android:id="@+id/image_collect"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/collect"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的收藏"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/image_collect"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/image_arrow3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/my_collect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff">

        <ImageView
            android:id="@+id/image_about_us"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/about"
            android:layout_marginLeft="19dp"
            android:layout_alignBottom="@+id/image_arrow4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="关于我们"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/image_about_us"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/image_arrow4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/about_us"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff">

        <ImageView
            android:id="@+id/image_set_up"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/set"
            android:layout_marginLeft="21dp"
            android:layout_alignTop="@+id/image_arrow5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"/>
        <TextView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/image_set_up"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/image_arrow5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

    </RelativeLayout>

</RelativeLayout>
