<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--这两个语句就是隐藏标题栏的语句 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->

        <!--这句语句说的是修改的标题栏的颜色，可以在color.xml文件中找到colorPrimary的颜色定义，当然也可以在里面做颜色的修改-->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!--这句语句说的是最上面通知栏的颜色修改，同理可以在color.xml文件中找到colorPrimary中可以修改颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- 进度条对话框 -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--/背景是否模糊显示，背景是否变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/myloading</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

</resources>
